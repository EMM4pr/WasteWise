<div data-controller="hello">

  <div class="card-white">
    <% @waste_items[0..10].each do |waste_item|%>
      <div id="item-cards" class="inner-card-white d-flex">
      <%# Elements 1 %>
        <div class="photo">
          <% if waste_item.photo.attached? %>
            <%= cl_image_tag waste_item.photo.key, class: "photo-card-img-top img-fluid", crop: :fill %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1532996122724-e3c354a0b15b?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YmlufGVufDB8fDB8fHwy" class="photo-card-img-top img-fluid" alt="Bin Image">
          <% end %>
        </div>

        <div class="item-info">
          <div>
          <%= waste_item.name %>
          </div>
          <div>
          <%= waste_item.bin_type.name %>
          </div>
        </div>
        <div id="learn-more">
        </div>

      </div>
    <%end%>

    <div data-hello-target="togglableElement" class="d-none", id="lol">
      <%# Elements 2 %>
      <% @waste_items[11..].each do |waste_item|%>
        <div id="item-cards" class="inner-card-white d-flex">

          <div class="photo">
            <% if waste_item.photo.attached? %>
              <%= cl_image_tag waste_item.photo.key, class: "photo-card-img-top img-fluid", crop: :fill %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1532996122724-e3c354a0b15b?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YmlufGVufDB8fDB8fHwy" class="photo-card-img-top img-fluid" alt="Bin Image">
            <% end %>
          </div>

          <div class="item-info">
            <div>
            <%= waste_item.name %>
            </div>
            <div>
            <%= waste_item.bin_type.name %>
            </div>
          </div>
          <div id="learn-more">
          </div>
        </div>

      <% end %>
    </div>
    <%= link_to "Show All My Items", "#", data: { action: "click->hello#toggleElement", hello_target: "lol" }, class: "btn btn-info"  %>

  </div>
</div>
