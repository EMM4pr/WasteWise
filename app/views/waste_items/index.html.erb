<div class="card-white" style="height: 100vh;">
  <% @waste_items.each do |waste_item|%>
    <div id="item-cards" class="inner-card-white d-flex">

      <div class="photo">
        <%= cl_image_tag waste_item.photo.key, class: "card-img-top img-fluid object-fit: cover;", crop: :fill %>
      </div>

      <div class="item-info">
        <div>
        <%= waste_item.name %>
        </div>
        <div>
        <%= waste_item.bin_type.name %>
        </div>
      </div>
      <div id="learn-more">
        Learn More


      </div>

    </div>
  <%end%>
    </div>
